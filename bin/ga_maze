#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../lib/ga_maze"
require "logger"

algorithm = GAMaze::Algorithm.new
algorithm.run

solution = algorithm.fittest
maze = GAMaze::Maze.new(genome: solution)
maze.run

solution.genes.each do |gene|
  if gene == 1
    maze.move_up
  elsif gene == 2
    maze.move_down
  elsif gene == 3
    maze.move_right
  elsif gene == 4
    maze.move_left
  end
end

puts
puts maze.to_s
puts solution.manhattan_distance
